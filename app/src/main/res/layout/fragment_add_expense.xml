<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddExpenseFragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/PictureFloatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:src="@drawable/baseline_photo_camera_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anek_tamil_medium"
            android:text="Create Expense"
            android:textAlignment="center"
            android:textSize="24sp" />


        <Spinner
            android:id="@+id/categoriesSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/second_background"
            android:padding="14dp" />

        <EditText
            android:id="@+id/NotesEditText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/second_background"
            android:ems="10"
            android:gravity="top"
            android:hint="Notes"
            android:inputType="text"
            android:padding="14dp"
            android:maxLines="4"/>

        <TextView
            android:id="@+id/CategoryFinalTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DateEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:layout_weight="1"
                android:background="@drawable/second_background"
                android:ems="10"
                android:hint="Date"
                android:inputType="text"
                android:padding="14dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/DatefloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="40dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/baseline_calendar_month_24"
                app:fabSize="normal"
                app:maxImageSize="30dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/second_background"
            android:ems="10"
            android:hint="Transaction Amount"
            android:inputType="numberDecimal"
            android:padding="14dp" />

        <Button
            android:id="@+id/SaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:text="Create"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ExpensePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/money" />

    </LinearLayout>
</FrameLayout>